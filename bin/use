#!/usr/bin/env zsh

local cwd=`pwd`

cd "$(dirname "$0")" || exit 1

local -a args
while [ $1 ]; do
    args=($args[*] $1)
    shift
done

help() {
    echo -e "Usage: use [-h | --help] <command> [<args>]"
    echo -e ""
    echo -e "<command>"
    echo -e "  colorpalette"
    echo -e "    Show my colorpalette"
    echo -e "  trash"
    echo -e "    Send file/directory to trash"
}

if (( $#args == 0 )); then
    help
    return
fi

case $args[1] in
    -h|--help)
        help
        ;;
    colorpalette)
        dart run ../src/colorpalette/bin/colorpalette.dart $args[2,-1]
        ;;
    trash)
        ../src/trash/trash.sh $cwd $args[2,-1]
        ;;
    setup)
        cd ../src/colorpalette
        dart pub get
        ;;
    upgrade)
        git pull origin main
        cd ../src/colorpalette
        dart pub upgrade
        ;;
    *)
        echo "No such command \"$args[1]\""
        ;;
esac

# vim: set ft=bash :for syntax highlight
